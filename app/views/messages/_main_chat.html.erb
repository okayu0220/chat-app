<div class="main-chat">
  <div class="main-chat-head">
    <div class="room-name">
      Room1
    </div>
    <div class="chat-end-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>

  <div class="main-chat-body">
    <div class="message">
      <div class="message-head">
        <div class="user-name">
          User1
        </div>
        <div class="date-time">
          2023/7/17(mon) 15:00
        </div>
      </div>
      <div class="text">
        おはよう
      </div>
    </div>
    <div class="message">
      <div class="message-head">
        <div class="user-name">
          User2
        </div>
        <div class="date-time">
          2023/7/17(mon) 15:05
        </div>
      </div>
      <div class="text">
        こんにちは
      </div>
    </div>
  </div>

  <div class="main-chat-foot">
    <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
      <div class="message-form">
        <%= f.text_field :content, class: "message", placeholder: "type a message" %>
        <label class="image">
          <span class="image-file" >画像</span>
          <%= f.file_field :image, class: "hidden" %>
        </label>
      </div>
      <%= f.submit '送信', class: "post-btn" %>
    <% end %>
  </div>
</div>