<div class="main-chat">
  <div class="main-chat-head">
    <div class="room-name">
      <%= @room.name %>
    </div>
    <div class="chat-end-btn">
      <%= link_to 'チャットを終了する', room_path(@room), data: { turbo_method: :delete }  %>
    </div>
  </div>

  <div class="main-chat-body">
    <%= render partial: 'message', collection: @messages %>
  </div>

  <div class="main-chat-foot">
    <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
      <div class="message-form">
        <%= f.text_field :content, class: "message", placeholder: "type a message" %>
        <label class="image">
          <span class="image-file" >画像</span>
          <%= f.file_field :image, class: "hidden" %>
        </label>
      </div>
      <%= f.submit '送信', class: "post-btn" %>
    <% end %>
  </div>
</div>